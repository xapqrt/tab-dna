{
  "manifest_version": 3,
  "name": "Tab DNA",
  "version": "0.1.0",
  "description": "your browser learned to know you ðŸ§¬",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scrollMonitor.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/dna-16.png",
      "48": "icons/dna-48.png",
      "128": "icons/dna-128.png"
    }
  },

  "icons": {
    "16": "icons/dna-16.png",
    "48": "icons/dna-48.png",
    "128": "icons/dna-128.png"
  }
}
